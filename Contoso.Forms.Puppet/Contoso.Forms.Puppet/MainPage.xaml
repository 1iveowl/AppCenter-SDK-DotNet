<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Contoso.Forms.Puppet.MainPage">
  <StackLayout>
    <Button Text="Go to sub page."
            HorizontalOptions="Center"
            VerticalOptions="CenterAndExpand"
            Clicked="GoToSubPage" />

    <Button Text="Divide by 0!"
            HorizontalOptions="Center"
            VerticalOptions="CenterAndExpand"
            Clicked="CrashWithDivsionByZero"/>

    <Button Text="Track handled PrepareException"
            HorizontalOptions="Center"
            VerticalOptions="CenterAndExpand"
            Clicked="TrackHandledAggregateException"/>
  </StackLayout>
</ContentPage>